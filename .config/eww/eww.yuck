(defwindow music
        :monitor 0
        :geometry (geometry 
            :x "3%"
            :y "64%"
            :width "32%"
            :height "31%"
            :anchor "top left"
        )
        :stacking "overlay"
        :exclusive true
        :focusable false
        :namespace "widget"
    (box
            :class "container"
            :height "340"
            :width "612"
            :halign "start"
            :valign "start"
            :hexpand true
            :vexpand true
            :spacing 5
            :orientation "horizontal"
        (image 
                :path ART
                :image-height "270"
                :image-width "270"
        )
        (box
                :height "100"
                :width "272"
                :halign "center"
                :valign "center"
                :hexpand true
                :vexpand true
                :spacing 5
                :orientation "vertical"
            (label 
                :text TITLE
                :xalign 0.5
                :limit-width 10
                :style "font-size: 40px; color: #a6da95"
            )
            (label 
                :text ARTIST
                :xalign 0.5
                :limit-width 10
                :style "font-size: 30px; color: #8bd5ca"
            )
            (box
                :orientation "horizontal"
                :spacing 5
                (button 
                    :height "10" 
                    :width "10"
                    :onclick "scripts/music_info --prev"
                "")
                (button 
                    :height "10" 
                    :width "10"
                    :onclick "scripts/music_info --toggle"
                STATUS)
                (button 
                    :height "10" 
                    :width "10"
                    :onclick "scripts/music_info --next"
                "")
            )
            (box
                :orientation "horizontal"
                :spacing 5
                (button 
                    :height "10" 
                    :width "10"
                    :onclick "scripts/music_info --shuffle"
                "")
                (button 
                    :height "10" 
                    :width "10"
                    :onclick "scripts/music_info --single"
                    :style {SINGLE ? "background-color: #a6da95" : "background-color: #ed8796"}
                "󰕇")
            )
            (progress :value PTIME :valign "center")
        )
    )
)

